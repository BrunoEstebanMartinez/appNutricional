<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".generalActivity">


   <androidx.constraintlayout.widget.ConstraintLayout

       android:layout_width="match_parent"
       android:layout_height="248dp"

       >

      <TextView
          android:id="@+id/tvcounter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="60sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.502"></TextView>

      <ProgressBar
          android:id="@+id/progressbar"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="206dp"
          android:layout_height="200dp"
          android:layout_gravity="center"
          android:background="@drawable/shape_circle_background"
          android:indeterminate="false"
          android:max="1000"
          android:progress="0"
          android:progressDrawable="@drawable/shape_circular_progress"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"></ProgressBar>
   </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="125dp"
       android:gravity="center"
       android:orientation="horizontal">

      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="120dp"
          android:orientation="vertical">

         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center"
             android:src="@drawable/running"></ImageView>

         <TextView
             android:id="@+id/pasos"
             android:layout_width="108dp"
             android:layout_height="62dp"
             android:textAlignment="center"
             android:padding="12dp"
             android:text="0"
             android:textSize="25sp"
             android:textStyle="bold"
             android:layout_gravity="center"></TextView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="117dp"
          android:layout_height="120dp"
          android:orientation="vertical">

         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center"
             android:src="@drawable/calories"></ImageView>

         <TextView
             android:id="@+id/calorias"
             android:layout_width="96dp"
             android:layout_height="60dp"
             android:layout_gravity="center"
             android:padding="12dp"
             android:text="0.0"
             android:textAlignment="center"
             android:textSize="25sp"
             android:textStyle="bold"></TextView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="120dp"
          android:orientation="vertical">

         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center"
             android:src="@drawable/time"></ImageView>

         <Chronometer
             android:id="@+id/tiempo"
             android:layout_width="108dp"
             android:layout_height="62dp"
             android:textAlignment="center"
             android:padding="12dp"
             android:textSize="20sp"
             android:textStyle="bold"
             android:layout_gravity="center"></Chronometer>
      </LinearLayout>
   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="125dp"
       android:layout_gravity="center"
       android:orientation="horizontal"
       android:padding="10dp">

      <ImageView
          android:layout_width="64dp"
          android:layout_height="75dp"
          android:layout_gravity="center"
          android:src="@drawable/localizacion">
      </ImageView>

      <TextView
          android:id="@+id/localizacion"
          android:layout_width="169dp"
          android:layout_height="112dp"
          android:layout_gravity="center"
          android:padding="25dp"
          android:text="Ubicando..."
          android:textAlignment="center"
          android:textSize="10sp"
          android:textStyle="bold"></TextView>

      <TextView
          android:id="@+id/kis"
          android:layout_width="161dp"
          android:layout_height="61dp"
          android:layout_gravity="center"
          android:padding="20dp"
          android:text="0.0 km"
          android:textSize="10sp"
          android:textStyle="bold"></TextView>

   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:orientation="horizontal"
       android:gravity="center">
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/colorGrass"
        android:text="START"
        android:onClick="startChronometer"
        android:layout_margin="5dp"/>
      <Button
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_margin="5dp"
          android:text="PAUSE"
          android:onClick="pauseChronometer"
          android:background="@color/colorGrassDark"/>
      <Button
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_margin="5dp"
          android:text="RESET"
          android:onClick="resetChronometer"
          android:background="@color/colorBitterSweetDark"/>

   </LinearLayout>
   </LinearLayout>
