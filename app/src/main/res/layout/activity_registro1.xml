<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registroActivity1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:text="Mi perfil"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorBitterSweetDark"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Vista previa"
        android:gravity="center"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Si lo datos son correctos, presiona en confirmar"
        android:textSize="16sp"
        android:padding="4dp"
        android:textAlignment="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Genero"
                android:textSize="18sp"
                android:textStyle="bold"
                ></TextView>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/GeneroGenero"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@color/colorFlower"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/combo1"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Estatura"
                android:textSize="18sp"
                android:textStyle="bold"
                ></TextView>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView

                    android:id="@+id/textaltura"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="cm"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@color/colorBitterSweet"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/combo2"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Peso"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textPeso"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""
                    android:background="@color/colorFlower"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="Kg"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@color/colorBitterSweet" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Edad"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textEdad"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text=""
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="años"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@color/colorBitterSweet" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Kilocalorias"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProceso"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Calorias de carbohidratos"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasdeCarbohidratos"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Calorias de proteinas"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasdeProteinas"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Calorias de grasas"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasdeGrasas"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Solucion de carbohidratos al día (g)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasPorGramoCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Solucion de proteinas al día (g)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasPorGramoProt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Solucion de grasas al día (g)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoCaloriasPorGramoGras"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Requerimiento basal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoBasal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Requerimiento de agua en ml"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/textProcesoAgua"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorFlower"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
        <Button
            android:id="@+id/ProcesoCalculo"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Previo"
            android:layout_marginLeft="25dp"
            android:background="@color/colorGrass"/>
            <Button
                android:id="@+id/ProcesoPuenteDatosGuardar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:text="Confirmar"
                android:background="@color/colorGrass"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>