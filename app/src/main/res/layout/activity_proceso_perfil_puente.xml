<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".procesoPerfilPuente"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:text="Mi perfil"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorBitterSweetDark"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Ingrese los datos correspondientes"
        android:gravity="center"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Todo en centimetros y kilogramos"
        android:textSize="16sp"
        android:padding="4dp"
        android:textAlignment="center"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/Validacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Genero"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    ></TextView>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/ProcesamientoGenero"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:background="@color/colorFlower"
                        >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/combo1"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Estatura"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    ></TextView>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    >
                    <EditText
                        android:id="@+id/ProcesamientoEstatura"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@color/colorFlower"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text=""
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="cm"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@color/colorBitterSweet"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/combo2"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Peso"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    >
                    <EditText
                        android:id="@+id/ProcesamientoPeso"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text=""
                        android:background="@color/colorFlower"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="Kg"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@color/colorBitterSweet" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_width="200dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Edad"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    >
                    <EditText
                        android:id="@+id/ProcesamientoEdad"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@color/colorFlower"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text=""
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="aÃ±os"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@color/colorBitterSweet" />
                </LinearLayout>

            </LinearLayout>

                <Button
                    android:id="@+id/ProcesoPuenteDatoa"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:text="Continuar"
                    android:background="@color/colorGrass"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>