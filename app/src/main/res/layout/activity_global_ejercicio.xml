<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalEjercicio"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio seleccionado"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="109dp"
                android:layout_height="32dp"
                android:text="Nombre"
                android:padding="5dp"
                android:layout_marginRight="100dp"
                />

            <TextView
                android:id="@+id/NombreViewEjercicio"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:layout_width="109dp"
                android:layout_height="32dp"
                android:text="Tipo"
                android:padding="5dp"
                android:layout_marginRight="100dp"
                />

            <TextView
                android:id="@+id/TipoEjercicioView"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:layout_width="127dp"
                android:layout_height="32dp"
                android:text="Calorias"
                android:padding="5dp"
                android:layout_marginRight="90dp"
                />

            <TextView
                android:id="@+id/CaloriasEjercicioView"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:layout_width="127dp"
                android:layout_height="32dp"
                android:text="MET"
                android:padding="5dp"
                android:layout_marginRight="90dp"
                />

            <TextView
                android:id="@+id/METEjercicioView"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:layout_width="127dp"
                android:layout_height="32dp"
                android:text="Tiempo(min)"
                android:padding="5dp"
                android:layout_marginRight="90dp"
                />

            <EditText
                android:id="@+id/TiempoView"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLength="2"
                android:inputType="number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttontransicionejerciciocalcular"
                android:layout_width="190dp"
                android:layout_height="39dp"
                android:text="Calcular "
                />
            <Button
                android:id="@+id/buttontransicionejercicioguardar"
                android:layout_width="190dp"
                android:layout_height="39dp"
                android:text="Agregar"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PuentePesoEs"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>